<tr>
  <td>
    <%= user.id %>
  </td>
  <td>
    <%= user.email %>
  </td>
  <td>
    <%= user.gender.capitalize %>
  </td>
  <td>
    <%= user.age || 'Unknown' %>
  </td>
  <td>
    <%= user.interests.map(&:name).join ', ' %>
  </td>
  <td>
    <% if can? :destroy, user %>
      <%= link_to user, method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete user #{user.email}" } do %>
        <i class="fa fa-trash"></i>
      <% end %>
    <% end %>
  </td>
</tr>
