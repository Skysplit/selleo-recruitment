<!DOCTYPE html>
<html>
  <head>
    <title>Recuruitment Web App</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container">
      <%= content_tag :div, flash[:error], class: 'alert alert-error' if flash[:error] %>
      <%= content_tag :div, flash[:alert], class: 'alert alert-warning' if flash[:alert] %>
      <%= content_tag :div, flash[:notice], class: 'alert alert-info' if flash[:notice] %>
      <%= yield %>
    </div>
  </body>
</html>
